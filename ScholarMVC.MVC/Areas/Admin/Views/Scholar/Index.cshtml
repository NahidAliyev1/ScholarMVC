@using ScholarMVC.DAL.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@model List<Scholar>


<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Scholar Table</h6>
                <a asp-area="Admin" asp-controller="Scholar" asp-action="Create" >Create</a>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Image </th>
                            <th scope="col">Price</th>
                            <th scope="col">Category</th>
                            <th scope="col">Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Scholar item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td><img src="~/assets/uploadedImages/@item.ImgPath" alt=""></td>
                                <td>@item.Price</td>
                                <td>@item.Category</td>
                                <td>@item.Name</td>


                                <td>

                                    <a asp-area="Admin" asp-controller="Scholar" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                    <a asp-area="Admin" asp-controller="Scholar" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                    <a asp-area="Admin" asp-controller="Scholar" asp-action="Info" asp-route-id="@item.Id" class="btn btn-info">Info</a>

                                </td>
                            </tr>
                        }

                                   
                                </tbody>
                            </table>
                        </div>
        </div>
            </div>
</div>
            <!-- Table End -->
          